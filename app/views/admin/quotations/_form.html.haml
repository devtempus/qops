.panel-body
  = form_for quotation, url: action_path,  html: {class: 'form-horizontal', role: 'form'} do |f|
    - if quotation.errors.any?
      #error_explanation
        %h2= "#{pluralize(quotation.errors.count, "error")} Quotation save problem:"
        %ul
          - quotation.errors.full_messages.each do |msg|
            %li= msg
    .form-group.field
      = f.label :publicated_date
      = f.text_field :publicated_date, class: 'form-control'
    .form-group.field
      = f.label :text, 'Short text Quotation'
      = f.text_field :text, class: 'form-control wysihtml5'
    .form-group
      = f.submit action_name == 'edit' ? 'Update' : 'Create', class: 'form-control btn btn-primary submit-button'