.login-container
  %h1
    Join Us, or
    = render 'users/shared/links'
  .social-login-btn
    = render partial: 'users/shared/social_links'
  = form_for resource, as: resource_name, url: registration_path(resource_name), role: 'form'  do |f|
    = devise_error_messages!
    .form-group
      = f.label :email
      = f.email_field :email, autofocus: true,  placeholder: 'Email', class: 'form-control'
    .form-group
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      = f.password_field :password, autocomplete: "off",  placeholder: 'Password', class: 'form-control'
    .form-group
      = f.label :password_confirmation
      = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm password', class: 'form-control'
    .pull-left
      %button.btn.btn.btn-primary.loginmodal-submit{type: 'submit'}
        Join me
